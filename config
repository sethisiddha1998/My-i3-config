# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#9dc1c4"
	color_bad = "#c49da8"
	color_degraded = "#d7d88a"
	interval = 5
}

#order += "ipv6"
order += "disk /"
order += "wireless _first_"
order += "ethernet _first_"
order += "battery all"
order += "cpu_usage"
order += "load"
#order += "volume master"
order += "tztime local"

disk "/" {
        format = ": (%avail)" 
}

wireless _first_ {
        format_up = ": %quality"
        format_down = "Wifi de ces morts est suicidé"
}

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = ": (%speed)"
        format_down = ": Man down"
}

battery all {
        format = "%status %percentage ~ %remaining"
        format_down = "Pas de batterie uwu"
        status_chr = "() Chargement: "
        status_bat = "() Sous batterie: "
        status_unk = "(?) Inconnue"
        status_full = "() Batterie full: "
        path = "/sys/class/power_supply/BAT%d/uevent"
        low_threshold = 10
}

cpu_usage {
        format = ": %usage"
        max_threshold = 75
}

load {
        format = "%1min"
}

volume master {
	format = "♪: %volume"
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
        format = ": %Y-%m-%d / %H:%M / Hello Senpai :3  "
}